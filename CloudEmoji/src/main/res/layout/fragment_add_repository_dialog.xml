<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="org.ktachibana.cloudemoji.fragments.AddRepositoryDialogFragment">

    <EditText
        android:id="@+id/addRepositoryUrlEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addRepositoryAliasEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/addRepositoryAliasEditText"
        android:hint="@string/repo_url"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/addRepositoryAliasEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addRepositoryUrlEditText"
        android:hint="@string/alias" />

</RelativeLayout>
